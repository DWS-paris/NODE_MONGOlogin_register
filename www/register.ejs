<!-- Importer le header -->
<% include partials/header %>

<h1>Formulaire d'inscription</h1>
<p>Remplissez les champs suivants pour vous inscrire.</p>

<form method="post" action="/users/register">
    <label>Nom complet <% if(errors.name){ %><span><%= errors.name %></span><% } %></label>
    <input type="text" name="name">

    <label>Nom d'utilisateur <% if(errors.username){ %><span><%= errors.username %></span><% } %></label>
    <input type="text" name="username">

    <label>Email <% if(errors.email){ %><span><%= errors.email %></span><% } %></label>
    <input type="email" name="email">
    
    <label>Mot de passe <% if(errors.password){ %><span><%= errors.password %></span><% } %></label>
    <input type="password" name="password">
    
    <label>Confirmer le mot de passe <% if(errors.passwordVerif){ %><span><%= errors.passwordVerif %></span><% } %></label>
    <input type="password" name="passwordVerif">
    <button type="submit">Inscription</button>
</form>
        
<!-- Importer le footer -->
<% include partials/footer %>